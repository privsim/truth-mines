{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://truth-mines.org/schemas/node.schema.json",
  "title": "Truth Mines Node",
  "description": "Schema for a knowledge graph node in Truth Mines",
  "type": "object",
  "required": ["id", "type", "domain", "title"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]{6}$",
      "description": "Unique 6-character alphanumeric identifier"
    },
    "type": {
      "type": "string",
      "enum": [
        "proposition",
        "theorem",
        "theory",
        "axiom",
        "definition",
        "observation",
        "experiment",
        "concept",
        "lemma",
        "corollary",
        "conjecture",
        "principle",
        "law"
      ],
      "description": "Type of knowledge node"
    },
    "domain": {
      "type": "string",
      "enum": ["philosophy", "mathematics", "physics"],
      "description": "Primary domain this node belongs to"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Short, human-readable title for the node"
    },
    "content": {
      "type": "string",
      "description": "Natural language explanation or statement of the node"
    },
    "formal": {
      "type": "string",
      "description": "Formal representation (logical notation, mathematical formula, etc.)"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9_]+$"
      },
      "uniqueItems": true,
      "description": "Tags for categorization and search"
    },
    "metadata": {
      "type": "object",
      "description": "Domain-specific or custom metadata",
      "properties": {
        "modality": {
          "type": "string",
          "enum": ["necessary", "contingent", "possible", "impossible"]
        },
        "certainty": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "importance": {
          "type": "number",
          "minimum": 0,
          "maximum": 10
        },
        "difficulty": {
          "type": "number",
          "minimum": 0,
          "maximum": 10
        },
        "axiom_system": {
          "type": "string"
        },
        "proof_id": {
          "type": "string"
        },
        "regime": {
          "type": "string",
          "enum": ["classical", "quantum", "relativistic", "statistical"]
        },
        "domain_of_validity": {
          "type": "object",
          "properties": {
            "min_scale": {
              "type": "number"
            },
            "max_scale": {
              "type": "number"
            }
          }
        }
      },
      "additionalProperties": true
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Citations, references, or source identifiers"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of node creation"
    },
    "updated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    }
  },
  "additionalProperties": false
}
